<style>
    .manners-container {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .manners-header {
        margin-bottom: 3rem;
    }

    .progress-wrapper {
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .progress {
        border-radius: 15px;
        background-color: #e9ecef;
        overflow: hidden;
    }

    .progress-text {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .manners-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .manner-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .manner-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .manner-image-wrapper {
        position: relative;
        padding-top: 75%;
        overflow: hidden;
    }

    .manner-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 1rem;
        transition: transform 0.3s ease;
    }

    .manner-card:hover .manner-image {
        transform: scale(1.1);
    }

    .manner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.1);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .manner-card:hover .manner-overlay {
        opacity: 1;
    }

    .sound-btn {
        background: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        color: #007bff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .sound-btn:hover {
        transform: scale(1.1);
        background: #007bff;
        color: white;
    }

    .manner-info {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .manner-info h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .manner-description {
        margin: 0.5rem 0 0;
        color: #666;
        font-size: 1.1rem;
    }

    .completion-badge {
        position: absolute;
        top: -15px;
        right: 15px;
        color: #28a745;
        font-size: 24px;
        display: none;
    }

    .completion-badge.completed {
        display: block;
        animation: popIn 0.3s ease;
    }

    @@keyframes popIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        .manners-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
