</div>

<style>
    .manners-container {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .manners-header {
        margin-bottom: 3rem;
    }

    .progress-wrapper {
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .progress {
        border-radius: 15px;
        background-color: #e9ecef;
        overflow: hidden;
    }

    .progress-text {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .manners-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .manner-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .manner-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .manner-image-wrapper {
        position: relative;
        padding-top: 75%;
        overflow: hidden;
    }

    .manner-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 1rem;
        transition: transform 0.3s ease;
    }

    .manner-card:hover .manner-image {
        transform: scale(1.1);
    }

    .manner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.1);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .manner-card:hover .manner-overlay {
        opacity: 1;
    }

    .sound-btn {
        background: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        color: #007bff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .sound-btn:hover {
        transform: scale(1.1);
        background: #007bff;
        color: white;
    }

    .manner-info {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .manner-info h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .manner-description {
        margin: 0.5rem 0 0;
        color: #666;
        font-size: 1.1rem;
    }

    .completion-badge {
        position: absolute;
        top: -15px;
        right: 15px;
        color: #28a745;
        font-size: 24px;
        display: none;
    }

    .completion-badge.completed {
        display: block;
        animation: popIn 0.3s ease;
    }

    @@keyframes popIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        .manners-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .manner-info h3 {
            font-size: 1.2rem;
        }

        .manner-description {
            font-size: 1rem;
        }

        .sound-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }

    .login-alert {
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        background-color: rgba(255, 255, 255, 0.95);
        border: 2px solid #17a2b8;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .login-alert .btn {
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .login-alert .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

@section Scripts {
    <script>
        // Görgü kuralları seslerini çalma ve ilerlemeyi kaydetme
        function playMannerSound(manner) {
            const soundMap = {
                'dinleme': 'dinleme.mp3',
                'izin': 'izin-isteme.mp3',
                'ozur': 'ozur-dileme.mp3',
                'paylasma': 'paylasma.mp3',
                'selamlasma': 'selamlasma.mp3',
                'sira': 'sıra-bekleme.mp3',
                'sofra': 'sofra-adabi.mp3',
                'tesekkur': 'tesekkur-etmek.mp3'
            };

            const card = document.querySelector(`[data-manner="${manner}"]`);
            const soundBtn = card.querySelector('.sound-btn');
            const soundFile = soundMap[manner] || `${manner}.mp3`;
            const audio = new Audio(`/sounds/gorgu/${soundFile}`);
            
            // Buton animasyonu
            soundBtn.style.transform = 'scale(0.9)';
            setTimeout(() => soundBtn.style.transform = 'scale(1)', 200);
            
            audio.onended = function() {
                if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                    markAsCompleted(manner);
                }
            };
            
            audio.play().catch(error => {
                console.error('Ses çalınamadı:', error);
                alert('Ses dosyası yüklenirken bir hata oluştu. Lütfen tekrar deneyin.');
            });
        }

        // Tamamlanan kuralları işaretleme
        function markAsCompleted(manner) {
            const card = document.querySelector(`[data-manner="${manner}"]`);
            const badge = card.querySelector('.completion-badge');
            
            if (!badge.classList.contains('completed')) {
                badge.classList.add('completed');
                saveProgress(manner);
                updateProgress();
            }
        }

        // İlerleme durumunu sunucuya kaydetme
        function saveProgress(manner) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Manners',
                    itemName: manner,
                    isCompleted: true
                })
            });
        }

        // İlerleme çubuğunu güncelleme
        function updateProgress() {
            const completedBadges = document.querySelectorAll('.completion-badge.completed');
            const totalManners = document.querySelectorAll('.manner-card').length;
            const progress = (completedBadges.length / totalManners) * 100;
            
            const progressBar = document.getElementById('moduleProgress');
            const progressText = progressBar.querySelector('.progress-text');
            
            progressBar.style.width = `${progress}%`;
            progressBar.setAttribute('aria-valuenow', progress);
            progressText.textContent = `${Math.round(progress)}%`;
        }

        // Sayfa yüklendiğinde mevcut ilerlemeyi göster
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                updateProgress();
            }
        });
    </script>
} 