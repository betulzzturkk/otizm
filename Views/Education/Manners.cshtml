</style>

@section Scripts {
    <script>
        // G√∂rg√º kurallarƒ± seslerini √ßalma ve ilerlemeyi kaydetme
        function playMannerSound(manner) {
            const soundMap = {
                'dinleme': 'dinleme.mp3',
                'izin': 'izin-isteme.mp3',
                'ozur': 'ozur-dileme.mp3',
                'paylasma': 'paylasma.mp3',
                'selamlasma': 'selamlasma.mp3',
                'sira': 'sƒ±ra-bekleme.mp3',
                'sofra': 'sofra-adabi.mp3',
                'tesekkur': 'tesekkur-etmek.mp3'
            };

            const card = document.querySelector(`[data-manner="${manner}"]`);
            const soundBtn = card.querySelector('.sound-btn');
            const soundFile = soundMap[manner] || `${manner}.mp3`;
            const audio = new Audio(`/sounds/gorgu/${soundFile}`);
            
            // Buton animasyonu
            soundBtn.style.transform = 'scale(0.9)';
            setTimeout(() => soundBtn.style.transform = 'scale(1)', 200);
            
            audio.onended = function() {
                if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                    markAsCompleted(manner);
                }
            };
            
            audio.play().catch(error => {
                console.error('Ses √ßalƒ±namadƒ±:', error);
                alert('Ses dosyasƒ± y√ºklenirken bir hata olu≈ütu. L√ºtfen tekrar deneyin.');
            });
        }

        // Tamamlanan kurallarƒ± i≈üaretleme
        function markAsCompleted(manner) {
            const card = document.querySelector(`[data-manner="${manner}"]`);
            const badge = card.querySelector('.completion-badge');
            
            if (!badge.classList.contains('completed')) {
                badge.classList.add('completed');
                saveProgress(manner);
                updateProgress();
            }
        }

        // ƒ∞lerleme durumunu sunucuya kaydetme
        function saveProgress(manner) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Manners',
                    itemName: manner,
                    isCompleted: true
                })
            });
        }

        // ƒ∞lerleme √ßubuƒüunu g√ºncelleme
        function updateProgress() {
            const completedBadges = document.querySelectorAll('.completion-badge.completed');
            const totalManners = document.querySelectorAll('.manner-card').length;
            const progress = (completedBadges.length / totalManners) * 100;
            
            const progressBar = document.getElementById('moduleProgress');
            const progressText = progressBar.querySelector('.progress-text');
            
            progressBar.style.width = `${progress}%`;
            progressBar.setAttribute('aria-valuenow', progress);
            progressText.textContent = `${Math.round(progress)}%`;
        }

        // Sayfa y√ºklendiƒüinde mevcut ilerlemeyi g√∂ster
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                updateProgress();
            }
        });
    </script>
} 