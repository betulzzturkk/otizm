<style>
    .stories-container {
        background: linear-gradient(135deg, #fff8e1 0%, #ffe0b2 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .stories-header {
        margin-bottom: 3rem;
    }

    .progress-wrapper {
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .progress {
        border-radius: 15px;
        background-color: #e9ecef;
        overflow: hidden;
    }

    .progress-text {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .stories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .story-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .story-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .story-video-wrapper {
        position: relative;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
        overflow: hidden;
    }

    .story-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    .story-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.3);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .story-card:hover .story-overlay {
        opacity: 1;
    }

    .sound-btn {
        background: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        color: #007bff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .sound-btn:hover {
        transform: scale(1.1);
        background: #007bff;
        color: white;
    }

    .story-info {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .story-info h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .story-description {
        margin: 0.5rem 0 0;
        color: #666;
        font-size: 1.1rem;
    }

    .completion-badge {
        position: absolute;
        top: -15px;
        right: 15px;
        color: #28a745;
        font-size: 24px;
        display: none;
    }

    .completion-badge.completed {
        display: block;
        animation: popIn 0.3s ease;
    }

    @@keyframes popIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        .stories-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
        }

        .story-info h3 {
            font-size: 1.2rem;
        }

        .story-description {
            font-size: 1rem;
        }

        .sound-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
</style>

@section Scripts {
    <script>
        // Video izleme durumunu takip etme
        function onVideoEnd(story) {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                markAsCompleted(story);
            }
        }

        // Tamamlanan hikayeleri i≈üaretleme
        function markAsCompleted(story) {
            const card = document.querySelector(`[data-story="${story}"]`);
            const badge = card.querySelector('.completion-badge');
            
            if (!badge.classList.contains('completed')) {
                badge.classList.add('completed');
                saveProgress(story);
                updateProgress();
            }
        }

        // ƒ∞lerleme durumunu sunucuya kaydetme
        function saveProgress(story) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Stories',
                    itemName: story,
                    isCompleted: true
                })
            });
        }

        // ƒ∞lerleme √ßubuƒüunu g√ºncelleme
        function updateProgress() {
            const completedBadges = document.querySelectorAll('.completion-badge.completed');
            const totalStories = document.querySelectorAll('.story-card').length;
            const progress = (completedBadges.length / totalStories) * 100;
            
            const progressBar = document.getElementById('moduleProgress');
            const progressText = progressBar.querySelector('.progress-text');
            
            progressBar.style.width = `${progress}%`;
            progressBar.setAttribute('aria-valuenow', progress);
            progressText.textContent = `${Math.round(progress)}%`;
        }

        // Sayfa y√ºklendiƒüinde mevcut ilerlemeyi g√∂ster
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                updateProgress();
            }
        });
    </script>
} 