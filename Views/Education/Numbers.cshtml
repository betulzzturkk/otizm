<style>
    .numbers-container {
        background: linear-gradient(135deg, #f5f0ff 0%, #f0f0ff 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .numbers-header {
        margin-bottom: 3rem;
    }

    .progress-wrapper {
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .progress {
        border-radius: 15px;
        background-color: #e9ecef;
        overflow: hidden;
    }

    .progress-text {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .numbers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .number-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .number-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .number-display {
        position: relative;
        height: 200px;
        background: linear-gradient(45deg, #6c5ce7, #a367dc);
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .number {
        font-size: 100px;
        color: white;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .number-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.3);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .number-card:hover .number-overlay {
        opacity: 1;
    }

    .sound-btn {
        background: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        color: #007bff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .sound-btn:hover {
        transform: scale(1.1);
        background: #007bff;
        color: white;
    }

    .number-info {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .number-info h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .number-example {
        margin: 0.5rem 0 0;
        color: #666;
        font-size: 1.1rem;
    }

    .completion-badge {
        position: absolute;
        top: -15px;
        right: 15px;
        color: #28a745;
        font-size: 24px;
        display: none;
    }

    .completion-badge.completed {
        display: block;
        animation: popIn 0.3s ease;
    }

    @@keyframes popIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        .numbers-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
        }

        .number {
            font-size: 80px;
        }

        .number-info h3 {
            font-size: 1.2rem;
        }

        .number-example {
            font-size: 1rem;
        }

        .sound-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
</style>

@section Scripts {
    <script>
        // SayÄ± seslerini Ã§alma ve ilerlemeyi kaydetme
        function playNumberSound(number) {
            const card = document.querySelector(`[data-number="${number}"]`);
            const soundBtn = card.querySelector('.sound-btn');
            const audio = new Audio(`/sounds/numbers/${number}.mp3`);
            
            // Buton animasyonu
            soundBtn.style.transform = 'scale(0.9)';
            setTimeout(() => soundBtn.style.transform = 'scale(1)', 200);
            
            audio.onended = function() {
                if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                    markAsCompleted(number);
                }
            };
            
            audio.play().catch(error => {
                console.error('Ses Ã§alÄ±namadÄ±:', error);
            });
        }

        // Tamamlanan sayÄ±larÄ± iÅŸaretleme
        function markAsCompleted(number) {
            const card = document.querySelector(`[data-number="${number}"]`);
            const badge = card.querySelector('.completion-badge');
            
            if (!badge.classList.contains('completed')) {
                badge.classList.add('completed');
                saveProgress(number);
                updateProgress();
            }
        }

        // Ä°lerleme durumunu sunucuya kaydetme
        function saveProgress(number) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Numbers',
                    itemName: number,
                    isCompleted: true
                })
            });
        }

        // Ä°lerleme Ã§ubuÄŸunu gÃ¼ncelleme
        function updateProgress() {
            const completedBadges = document.querySelectorAll('.completion-badge.completed');
            const totalNumbers = document.querySelectorAll('.number-card').length;
            const progress = (completedBadges.length / totalNumbers) * 100;
            
            const progressBar = document.getElementById('moduleProgress');
            const progressText = progressBar.querySelector('.progress-text');
            
            progressBar.style.width = `${progress}%`;
            progressBar.setAttribute('aria-valuenow', progress);
            progressText.textContent = `${Math.round(progress)}%`;
        }

        // Sayfa yÃ¼klendiÄŸinde mevcut ilerlemeyi gÃ¶ster
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                updateProgress();
            }
        });
    </script>
} 