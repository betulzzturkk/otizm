<style>
    .animals-container {
        background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .animals-header {
        margin-bottom: 3rem;
    }

    .progress-wrapper {
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .progress {
        border-radius: 15px;
        background-color: #e9ecef;
        overflow: hidden;
    }

    .progress-text {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .animals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .animal-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .animal-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .animal-image-wrapper {
        position: relative;
        padding-top: 75%;
        overflow: hidden;
    }

    .animal-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .animal-card:hover .animal-image {
        transform: scale(1.1);
    }

    .animal-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.3);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .animal-card:hover .animal-overlay {
        opacity: 1;
    }

    .sound-btn {
        background: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        color: #007bff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .sound-btn:hover {
        transform: scale(1.1);
        background: #007bff;
        color: white;
    }

    .animal-info {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .animal-info h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .animal-sound-text {
        margin: 0.5rem 0 0;
        color: #666;
        font-size: 1.1rem;
    }

    .completion-badge {
        position: absolute;
        top: -15px;
        right: 15px;
        color: #28a745;
        font-size: 24px;
        display: none;
    }

    .completion-badge.completed {
        display: block;
        animation: popIn 0.3s ease;
    }

    @@keyframes popIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        .animals-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .animal-info h3 {
            font-size: 1.2rem;
        }

        .animal-sound-text {
            font-size: 1rem;
        }

        .sound-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
</style>

@section Scripts {
    <script>
        // Hayvan seslerini √ßalma ve ilerlemeyi kaydetme
        function playAnimalSound(animal) {
            const card = document.querySelector(`[data-animal="${animal}"]`);
            const soundBtn = card.querySelector('.sound-btn');
            const audio = new Audio(`/sounds/animals/${animal}.mp3`);
            
            // Buton animasyonu
            soundBtn.style.transform = 'scale(0.9)';
            setTimeout(() => soundBtn.style.transform = 'scale(1)', 200);
            
            audio.onended = function() {
                if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                    markAsCompleted(animal);
                }
            };
            
            audio.play().catch(error => {
                console.error('Ses √ßalƒ±namadƒ±:', error);
            });
        }

        // Tamamlanan hayvanlarƒ± i≈üaretleme
        function markAsCompleted(animal) {
            const card = document.querySelector(`[data-animal="${animal}"]`);
            const badge = card.querySelector('.completion-badge');
            
            if (!badge.classList.contains('completed')) {
                badge.classList.add('completed');
                saveProgress(animal);
                updateProgress();
            }
        }

        // ƒ∞lerleme durumunu sunucuya kaydetme
        function saveProgress(animal) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Animals',
                    itemName: animal,
                    isCompleted: true
                })
            });
        }

        // ƒ∞lerleme √ßubuƒüunu g√ºncelleme
        function updateProgress() {
            const completedBadges = document.querySelectorAll('.completion-badge.completed');
            const totalAnimals = document.querySelectorAll('.animal-card').length;
            const progress = (completedBadges.length / totalAnimals) * 100;
            
            const progressBar = document.getElementById('moduleProgress');
            const progressText = progressBar.querySelector('.progress-text');
            
            progressBar.style.width = `${progress}%`;
            progressBar.setAttribute('aria-valuenow', progress);
            progressText.textContent = `${Math.round(progress)}%`;
        }

        // Sayfa y√ºklendiƒüinde mevcut ilerlemeyi g√∂ster
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                // Burada sunucudan mevcut ilerleme durumunu alabilirsiniz
                // ≈ûimdilik √∂rnek olarak bo≈ü bƒ±rakƒ±yoruz
                updateProgress();
            }
        });
    </script>
} 