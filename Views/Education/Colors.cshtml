<style>
    .colors-container {
        background: linear-gradient(135deg, #fff5f5 0%, #fff0f0 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .colors-header {
        margin-bottom: 3rem;
    }

    .progress-wrapper {
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .progress {
        border-radius: 15px;
        background-color: #e9ecef;
        overflow: hidden;
    }

    .progress-text {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .colors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .color-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .color-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .color-display {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .color-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.1);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .color-card:hover .color-overlay {
        opacity: 1;
    }

    .sound-btn {
        background: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        color: #007bff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .sound-btn:hover {
        transform: scale(1.1);
        background: #007bff;
        color: white;
    }

    .color-info {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .color-info h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .color-example {
        margin: 0.5rem 0 0;
        color: #666;
        font-size: 1.1rem;
    }

    .completion-badge {
        position: absolute;
        top: -15px;
        right: 15px;
        color: #28a745;
        font-size: 24px;
        display: none;
    }

    .completion-badge.completed {
        display: block;
        animation: popIn 0.3s ease;
    }

    @@keyframes popIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        .colors-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .color-info h3 {
            font-size: 1.2rem;
        }

        .color-example {
            font-size: 1rem;
        }

        .sound-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
</style>

@section Scripts {
    <script>
        // Renk seslerini √ßalma ve ilerlemeyi kaydetme
        function playColorSound(color) {
            const card = document.querySelector(`[data-color="${color}"]`);
            const soundBtn = card.querySelector('.sound-btn');
            const audio = new Audio(`/sounds/colors/${color}.mp3`);
            
            // Buton animasyonu
            soundBtn.style.transform = 'scale(0.9)';
            setTimeout(() => soundBtn.style.transform = 'scale(1)', 200);
            
            audio.onended = function() {
                if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                    markAsCompleted(color);
                }
            };
            
            audio.play().catch(error => {
                console.error('Ses √ßalƒ±namadƒ±:', error);
            });
        }

        // Tamamlanan renkleri i≈üaretleme
        function markAsCompleted(color) {
            const card = document.querySelector(`[data-color="${color}"]`);
            const badge = card.querySelector('.completion-badge');
            
            if (!badge.classList.contains('completed')) {
                badge.classList.add('completed');
                saveProgress(color);
                updateProgress();
            }
        }

        // ƒ∞lerleme durumunu sunucuya kaydetme
        function saveProgress(color) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Colors',
                    itemName: color,
                    isCompleted: true
                })
            });
        }

        // ƒ∞lerleme √ßubuƒüunu g√ºncelleme
        function updateProgress() {
            const completedBadges = document.querySelectorAll('.completion-badge.completed');
            const totalColors = document.querySelectorAll('.color-card').length;
            const progress = (completedBadges.length / totalColors) * 100;
            
            const progressBar = document.getElementById('moduleProgress');
            const progressText = progressBar.querySelector('.progress-text');
            
            progressBar.style.width = `${progress}%`;
            progressBar.setAttribute('aria-valuenow', progress);
            progressText.textContent = `${Math.round(progress)}%`;
        }

        // Sayfa y√ºklendiƒüinde mevcut ilerlemeyi g√∂ster
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User?.Identity?.IsAuthenticated)) {
                updateProgress();
            }
        });
    </script>
} 