@model AutismEducationPlatform.Models.EducationModule

@{
    ViewData["Title"] = "Eğitim Modülü Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Modül Silme Onayı</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4><i class="icon fas fa-exclamation-triangle"></i> Uyarı!</h4>
                        <p>Bu modülü silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderNumber)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderNumber)</dd>

                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Education)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Education.Name)</dd>

                        <dt class="col-sm-2">İçerik Sayısı</dt>
                        <dd class="col-sm-10">@Model.Contents.Count</dd>

                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
                        <dd class="col-sm-10">@(Model.IsActive ? "Aktif" : "Pasif")</dd>

                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <input type="submit" value="Sil" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 